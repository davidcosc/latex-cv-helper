    \section*{#1}%
    \begin{tabular}{p{0.2\textwidth} p{0.8\textwidth}}%
        \hspace{6pt}\faMale & #2 \\%
        \hspace{6pt}\faPhone & #3 \\%
        \hspace{6pt}\faEnvelope & #4 \\%
        \hspace{6pt}\faAddressBook & #5 \\%
        \hspace{6pt}\faCalendarDay & #6 \\%
        \hspace{6pt}\faPassport & #7%
    \end{tabular}%
}
% skillinfo
\newenvironment{skillinfo}[1]{%
    \def\witharg{#1}%
    \def\noarg{}%
    \ifx\witharg\noarg%
        \begin{tabular}{p{0.55\textwidth} p{0.45\textwidth}}%
    \else%
        \section*{#1}%
        \begin{tabular}{p{0.55\textwidth} p{0.45\textwidth}}%
    \fi%
}{%
    \end{tabular}%
}
\newcommand{\skillentry}[2]{%
    \hspace{2pt}#1 & %
    \begin{tikzpicture}[baseline={([yshift=-8pt]current bounding box.north)},x=3mm,y=3mm]%
        \foreach \x [count=\xi] in {0,1.2,2.4,3.6,4.8} {%
            \ifnum\xi<\numexpr #2+1%
                \draw[fill=lightgray] (\x,0) rectangle (\x+1,1);%
            \else%
                \draw (\x,0) rectangle (\x+1,1);%
            \fi%
        }%
    \end{tikzpicture}%
}
% cvtitle
\newcommand{\cvtitle}[2]{%
    \title{%
        \vspace{2.3em}%
        \bf{#1} \\%
        \vspace{9pt}%
        \large #2%
        \vspace{-6pt}%
    }%
    \date{}%
}
% history
\newenvironment{history}[1]{%
    \def\witharg{#1}%
    \def\noarg{}%
    \ifx\witharg\noarg%
        \begin{tabular}{p{0.25\textwidth} p{0.75\textwidth}}%
    \else%
        \section*{#1}%
        \begin{tabular}{p{0.25\textwidth} p{0.75\textwidth}}%
    \fi%
}{%
    \end{tabular}%
}
\newcommand{\histentry}[3]{%
    \def\witharg{#1}%
    \def\noarg{}%
    \bf{#1} & %
    \ifx\witharg\noarg%
        #3%
    \else%
        \textbf{#2} \newline #3%
    \fi%
}